{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS Node",
      "program": "${workspaceFolder}/node_modules/ts-node-dev/lib/bin.js",
      "args": ["--respawn", "--transpile-only", "${workspaceFolder}/src/server.ts"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
